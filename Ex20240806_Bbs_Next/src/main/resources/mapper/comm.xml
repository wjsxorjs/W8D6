<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.bbs_next.mapper.CommMapper">

    <!-- b_idx를 인자로 받아서
    해당 b_idx를 참조하는 댓글들을 반환하는 select문 -->
    <select id="commList" resultType="com.sist.bbs_next.vo.CommVO" parameterType="String">
        SELECT *
        FROM `comment_t`
        WHERE b_idx = #{b_idx}
    </select>

    <insert id="commAdd" parameterType="com.sist.bbs_next.vo.CommVO">
        INSERT
        INTO `comment_t`(writer, content, write_date, ip, b_idx)
        VALUES(#{writer}, #{content},NOW(),#{ip},#{b_idx})
    </insert>


</mapper>